<UserControl x:Class="MovieDatabase.WPF.Controls.SearchSortFilterUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MovieDatabase.WPF.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel Orientation="Horizontal" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Top" Width="800">
            <DockPanel 
                Grid.Row="1"
                Width="550"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="20 50 0 0"
                >

                <Label 
                    Content="Search By Movie Name"
                    FontSize="18"
                    DockPanel.Dock="Top"
                    />
                <TextBox 
                    Width="500"
                    FontSize="22"
                    HorizontalAlignment="Left"
                    DockPanel.Dock="Top"
                    />

                <Label 
                    Content="Search By Producer"
                    FontSize="18" 
                    DockPanel.Dock="Top"
                    />
                <ComboBox 
                    ItemsSource="{Binding Movies}"
                    Width="250"
                    HorizontalAlignment="Left"
                    DockPanel.Dock="Top"
                    >
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Producer.Name}" />
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>

                <Label 
                    Content="Search By Studio"
                    FontSize="18" 
                    DockPanel.Dock="Top"
                    />
                <ComboBox 
                    ItemsSource="{Binding Movies}"
                    Width="250"
                    HorizontalAlignment="Left"
                    DockPanel.Dock="Top"
                    >
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Studio.Name}" />
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>

                <StackPanel 
                    Orientation="Vertical"
                    DockPanel.Dock="Bottom">
                    <Label 
                    Content="Sort By"
                    FontSize="18"
                    />
                    <StackPanel Orientation="Horizontal">
                        <RadioButton Content="Producer" Margin=" 0 0 10 0"/>
                        <RadioButton Content="Studio" Margin="0 0 10 0"/>
                        <RadioButton Content="Year"/>
                    </StackPanel>
                </StackPanel>

                <Label
                    Content="Filter By Length"
                    FontSize="18"
                    DockPanel.Dock="Top"
                    />

                <TextBox
                    Width="50"
                    FontSize="22"
                    HorizontalAlignment="Left"
                    DockPanel.Dock="Left"
                    Margin="0 0 10 0"
                    />
                <Label 
                    Content="And"
                    DockPanel.Dock="Left"
                    Margin="0 0 10 0"
                    />
                <TextBox
                    Width="50"
                    FontSize="22"
                    HorizontalAlignment="Left"
                    DockPanel.Dock="Left"
                    />
            </DockPanel>

            <DockPanel 
                Grid.Row="1"
                Width="400"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Height="400"
                Margin="0 50 0 0">
                <StackPanel 
                    Orientation="Vertical">
                    <Button 
                        Content="Search"
                        HorizontalAlignment="Left"
                       />
                    <Button 
                        Content="Search"
                        HorizontalAlignment="Left"
                        />
                    <Button 
                        Content="Search"
                        HorizontalAlignment="Left"
                        />
                    <Button 
                        Content="Filter"
                        HorizontalAlignment="Left"
                      />
                    <Button 
                        Content="Sort"
                        HorizontalAlignment="Left"
                       />
                </StackPanel>
            </DockPanel>
        </StackPanel>
    </Grid>
</UserControl>
