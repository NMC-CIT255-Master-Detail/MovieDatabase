<UserControl x:Class="MovieDatabase.WPF.Peter.Views.MovieView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:uc="clr-namespace:MovieDatabase.WPF.Peter.Controls"
        xmlns:local="clr-namespace:MovieDatabase.WPF.Peter.Views"
        mc:Ignorable="d"
        Height="1080" Width="1920">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary
                    Source="pack://application:,,,/Peter/Resources/ResourceDictionaries/MovieResources.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid Margin="0 20 0 0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <uc:RibbonMenu Margin="0 -43 0 0" Grid.ColumnSpan="2" />
        <uc:MovieAddEditUserControl Grid.Row="1" Grid.ColumnSpan="2" Grid.Column="0" Grid.RowSpan="2" />
    </Grid>
</UserControl>