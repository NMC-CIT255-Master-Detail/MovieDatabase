<Application x:Class="MovieDatabase.WPF.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:viewmodels="clr-namespace:MovieDatabase.WPF.Peter.ViewModels"
             xmlns:views="clr-namespace:MovieDatabase.WPF.Peter.Views" 
             xmlns:local="clr-namespace:MovieDatabase.WPF.Peter">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>

            </ResourceDictionary.MergedDictionaries>
            <DataTemplate DataType="{x:Type viewmodels:MainViewModel}">
                <views:MovieView/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type viewmodels:MovieViewModel}">
                <views:MovieView/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type viewmodels:ProducerViewModel}">
                <views:ProducerView/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type viewmodels:StudioViewModel}">
                <views:StudioView/>
            </DataTemplate>
        </ResourceDictionary>
    </Application.Resources>
    
    
    
</Application>