                <Label Content="Movie Title"  FontSize="24" Margin=" 0 50 0 0" FontWeight="Bold"/>
                <StackPanel Orientation="Horizontal">
                    <Label Content="Release Date: " />
                    <TextBlock Text="02/15/2020" VerticalAlignment="Center" Margin="0 0 20 0"/>
                    
